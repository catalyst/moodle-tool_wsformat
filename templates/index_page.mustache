{{!
@template tool_wsformat/mytemplate

Admin search input for page header.

Example context (json):
{
"action": "http://moodle.local/admin/search.php",
"query": "themedesigner"
}
}}
{{! Get string from template }}
{{^items_selected}}
{{! <h2>Please select a webservice</h2> }}
{{/items_selected}}
{{#items_selected}}
<div class="page-container">
    <div class="columns-container">
        <div class="selected-webservices-column">
            <h3>
                Selected Web Services
            </h3>
            <ul class="selected-webservices-list">
                {{#formdata}}
                <li class="selected-webservices-list-item" data-name="{{name}}" data-desc="{{description}}" data-curl="{{curl}}" title="{{description}}">
                    <!-- Access the 'name' key of the current element -->
                    {{name}}
                </li>
                {{/formdata}}
            </ul>
            <div class="export-container">
            <a id="export-button-id" href="download.php?export-type=curl&selected={{selectedindexes}}" data-selected="{{selectedindexes}}" class="btn btn-primary" style="width:fit-content">Export All</a>
                <select id="export-type" name="export-type-select" class="form-control custom-select" {{#readonly}}disabled{{/readonly}}>
                    <option value="curl" selected="">cURL</option>
                    <option value="postman" >Postman</option>
                </select>
                <div class="form-defaultinfo text-muted">
                    Default: cURL
                </div>
            </div>
        </div>

        <div id="selection-panel" class="details-column">
            <h3 id="placeholder-text">
                Select a web service to view details
            </h3>
            <div class="details-content" id="ws-panel">
                <div class="details-title" id="ws-title">
                    {{! Replace the name -- done}}
                </div>
                <h3 id="ws-description">
                    {{! Replace the descriptions }}  
                </h3>
                <div class="details-request-container" id="ws-details">
                    <h4>Request</h4>
                    <button class="details-curl-button" id="details-curl-button">
                        curl
                    </button>
                    <button class="details-postman-button" id="details-postman-button">
                        Postman
                    </button>
                </div>
                <div class="code-container">
                    <code class="code-text" id="ws-curl">
                    
                    </code>
                    <button class="copy-button" id="curl-copy-button">
                        Copy
                    </button>
                </div>
            </div>
        </div>
    </div> 
</div>
{{/items_selected}}
